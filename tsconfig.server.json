{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "dist-server", "client", "**/*.test.ts"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist-server",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "declaration": false,
    "types": ["node"],
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
