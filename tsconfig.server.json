{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-server",
    "client",
    "**/*.test.ts",
    "server/storage-backup.ts" // exclude legacy/corrupted backup file from compilation
  ],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist-server",
    "module": "NodeNext",        // Required when using moduleResolution NodeNext
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false, // Override base (true) because we emit server JS
    "sourceMap": true,
    "declaration": false,
    "types": ["node"],
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
